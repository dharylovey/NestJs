generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  refreshToken String?
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

model Voter {
  id             String       @id @default(uuid())
  firstName      String
  lastName       String
  middleName     String?
  gender         String
  birthDate      DateTime?
  group          String?
  precintNumber  String
  legendary      String?
  status         String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  municipality   Municipality @relation(fields: [municipalityId], references: [id])
  municipalityId String
  Barangay       Barangay?    @relation(fields: [barangayId], references: [id])
  barangayId     String?
}

model Municipality {
  id        String     @id @default(uuid())
  name      String
  barangay  Barangay[]
  voters    Voter[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Barangay {
  id             String        @id @default(uuid())
  name           String
  voters         Voter[]
  createdAt      DateTime      @default(now())
  municipality   Municipality? @relation(fields: [municipalityId], references: [id])
  municipalityId String?
}
